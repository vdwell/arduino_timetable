#include <Arduino.h>
#include <Wire.h>
#include <GyverDS3231Min.h>

void setup()
{
    Serial.begin(9600);
    while (!Serial)
    {
        delay(10);
    }
    Wire.begin(); // join I2C bus as master (on Nano: SDA=A4, SCL=A5)

    Serial.println("I2C scanner starting...");
    byte count = 0;
    for (byte addr = 1; addr < 127; addr++)
    {
        Wire.beginTransmission(addr);
        byte err = Wire.endTransmission();
        if (err == 0)
        {
            Serial.print("Found device at 0x");
            if (addr < 16)
                Serial.print("0");
            Serial.print(addr, HEX);
            Serial.print("  (");
            Serial.print(addr);
            Serial.println(")");
            count++;
        }
    }
    if (count == 0)
        Serial.println("No I2C devices found.");
    else
    {
        Serial.print("Scan complete. ");
        Serial.print(count);
        Serial.println(" device(s) found.");
    }
}

void loop()
{
    // nothing here â€” scan done in setup. To rescan periodically move the scan code here.
    delay(1000);
}